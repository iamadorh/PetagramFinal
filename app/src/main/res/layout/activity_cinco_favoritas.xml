<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CincoFavoritas">


    <ImageView
        android:id="@+id/ivfoto1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/perrito"/>


    <ImageView
        android:id="@+id/ivfoto2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vaca"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivfoto1"/>


    <ImageView
        android:id="@+id/ivfoto3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/hipo"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivfoto2"
        />

    <ImageView
        android:id="@+id/ivfoto4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/conejo"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivfoto3"/>

    <ImageView
        android:id="@+id/ivfoto5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/leon"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivfoto4"
        />

</RelativeLayout>